<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    tools:context=".MenuFragmento.ListarEditarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="LISTAR E EDITAR PRODUTO"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txt0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textColor="@color/black"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtId"
            android:hint="Digite ID valido para editar "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:phoneNumber="true"
            android:visibility="gone" />


        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do produto:"
            android:textColor="@color/black"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtCadastroNomeProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />


        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PreÃ§o:"
            android:textColor="@color/black"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtCadastroPreco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:maxLength="10"
            android:phoneNumber="true"
            />
        <TextView
            android:id="@+id/textMaximo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limite maximo de caracter para este campo"
            android:textSize="15dp"
            android:visibility="gone"
            android:textStyle="italic"
            android:textColor="@color/red"/>


        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marca:"
            android:textColor="@color/black"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtCadastroMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantidade:"
            android:textColor="@color/black"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtCadastroQuantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:maxLength="10"
            android:phoneNumber="true"
            />

        <TextView
            android:id="@+id/textMaximoQuantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limite maximo de caracter para este campo"
            android:textSize="15dp"
            android:visibility="gone"
            android:textStyle="italic"
            android:textColor="@color/red"/>


        <Button
            android:id="@+id/btn_editar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/AzulClaro"
            android:background="@color/black"
            android:text="Atualizar"
            android:visibility="gone" />

        <!--<Button-->
            <!--android:id="@+id/btn_listar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:textColor="@color/AzulClaro"-->
            <!--android:background="@color/black"-->
            <!--android:text="Listar" />-->

        <CheckBox
            android:id="@+id/ativarEdicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Editar"
            android:textColor="@color/AzulClaro"
            android:textSize="17dp"
            android:textStyle="bold|italic" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>



</FrameLayout>